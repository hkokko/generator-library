        }
      ]
    },
    {
      "**************************************************": "OUTPUT VARIANTS"
    },
    {
      "name": "result",
      "explanation": "The output format.",
      "entries": [
        "{summary}",
        "{detail}",
        "{description}",
        "{stats}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief output.",
      "entries": [
        "{attack}"
      ]
    },
    {
      "name": "detail",
      "explanation": "More detailed output variations.",
      "entries": [
        "{attribute} {attack}",
        "{attack} ({feature})",
        "{attribute} {attack} ({feature})"
      ]
    },
    {
      "name": "description",
      "explanation": "Long description as a paragraph of text.",
